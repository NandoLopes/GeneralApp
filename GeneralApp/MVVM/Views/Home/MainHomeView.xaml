<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeneralApp.MVVM.Home.Home"
             Title="Home">
    <Grid Margin="15" RowDefinitions=".1*, .9*">
        <Label 
            StyleClass="Header"
            Text="Welcome to General App!"
            FontSize="Large"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
        <Grid Grid.Row="1" RowDefinitions=".1*, .9*">
            <Label Margin="10" StyleClass="SubHeader" Text="What do you need?"/>
            <CollectionView Grid.Row="1" ItemsSource="{Binding FunctionsList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Button Text="{Binding Name}"
                                Clicked="ButtonTaskPage"
                                ClassId="{Binding Id}"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>